<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph"
    app:startDestination="@id/laptopFragment">
    <fragment
        android:id="@+id/laptopFragment"
        android:name="com.example.shellinglaptopapp.ui.laptops.LaptopFragment"
        android:label="LaptopFragment" >
        <action
            android:id="@+id/action_laptopFragment_to_bertFragment"
            app:destination="@id/bertFragment" />
        <action
            android:id="@+id/action_laptopFragment_to_detailLaptopsFragment"
            app:destination="@id/detailLaptopsFragment" />
        <action
            android:id="@+id/action_laptopFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailLaptopsFragment"
        android:name="com.example.shellinglaptopapp.ui.laptops.detail.DetailLaptopsFragment"
        android:label="DetailLaptopsFragment" >
        <action
            android:id="@+id/action_detailLaptopsFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.shellinglaptopapp.ui.cart.CartFragment"
        android:label="CartFragment" >
        <action
            android:id="@+id/action_cartFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.shellinglaptopapp.ui.order.OrderFragment"
        android:label="OrderFragment" />
    <fragment
        android:id="@+id/bertFragment"
        android:name="com.example.shellinglaptopapp.ui.bert.BertFragment"
        android:label="BertFragment" />
</navigation>